/* pages/Allbook/allbook.wxss */
/* 书本图片封面 */
.container{
  padding: 0 20rpx
}
.bookImage {
  width: 220rpx;
  height: 300rpx;
   box-shadow:0rpx 0rpx 10rpx #888;
}

/* 分类 */

.contentName {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0rpx;
  border-left: 2px solid #333;
  padding-left: 20rpx;
}
.more{
  font-size: 12px;
  color: #555;
  margin-right: 50rpx
}

/* 每本书 */

.itemBook {
  margin-bottom: 30rpx;
  display: flex;
}

.itemBook-r {
  width: 450rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
  display: flex;
  color: #555;
  flex-direction: column;
  justify-content: space-between
}

/* 书名 */

.bookName {

  color: black;
  font-size: 28rpx;
  font-weight: 700;

}

/* 书本介绍 */

.bookDesr {

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.bookfooter{
 display: flex;
 justify-content: space-between
}
.footer-r text{
  margin: 0 4rpx
}