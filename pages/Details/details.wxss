/* pages/Details/details.wxss */
/**基础风格样式**/
@import '/towxml/style/main.wxss';

/**如果页面有动态主题切换，则需要将使用到的样式全部引入**/

/**主题配色（浅色样式）**/
@import '/towxml/style/theme/light.wxss';

/**主题配色（深色样式）**/
@import '/towxml/style/theme/dark.wxss';
/* 初始化类库 */
::-webkit-scrollbar{
width: 10rpx;
height: 30rpx;
color: #e9e9e9;
}
.bold14{
  font-weight: 700;
  color: black;
  font-size: 14px;
}
.bold16{
  font-weight: 700;
  color: black;
  font-size: 16px;
}
.slink12{
  font-size: 12px;
  color: #555;
}
.slink14{
  font-size: 12px;
}
/* 初始化类库 */
.container{
  padding: 0 20rpx
}
.top{
  display: flex;
}
.loading{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -50rpx;
  margin-left: -50rpx;
}
.loading image{
  width: 100rpx;
  height: 100rpx;
}
/* 头部详情开始 */
.top-l image{
  height: 300rpx;
  width: 250rpx
}
.bookName {
  color: black;
  font-size: 14px;
  font-weight: 700;
}
.top-r{
  display: flex;
  margin-left: 30rpx;
  flex-direction: column;
  justify-content: space-around;
  font-size: 12px;
  color: #555;
}
/* 头部详情结束 */
/* 头部按钮开始 */
 .btn{
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 5px solid #e9e9e9;
}
.btn button{
  height: 60rpx;
  width: 250rpx;
  font-size: 14px;
  line-height: 60rpx;
  background-color: #e9e9e9
}
/* 头部按钮结束 */


/* 中间部分开始 */
.abstract{
  margin-top: 10rpx
}
.desr{
  margin: 20rpx 0;
  padding-bottom: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
  border-bottom: 1px solid #e9e9e9;
}
.dir{
  font-size: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 30rpx;
  border-bottom: 5px solid #e9e9e9;

}
.dir text{
  margin-right: 20rpx;
}
/* 中间部分结束 */
.footer{
   margin: 0 auto;
  position: fixed;
  bottom: 10rpx;
  height: 60rpx;
  width: 710rpx;
}
.footer button{
  width: 85%;
  background-color: #409fff;
  color: #fff;
  border-radius: 10rpx;
  line-height: 60rpx;
  margin: 0 auto;
}
/* 目录 */
.zhezhao{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0rpx;
  z-index: 997;
  opacity: 0.3;
  background-color: #e9e9e9
}
.catalog{
  position: fixed;
  width: 500rpx;
  height: 90%;
  left: 50%;
  margin-left: -250rpx;
  top: 0rpx;
  z-index: 998;
  overflow-y: scroll;
  background-color: #fff
}
.catalog-name{
  display: block;
  font-size: 14px;
  height: 54rpx;
  line-height: 54rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #555
}
.item{
  display: block;
  font-size: 14px;
  line-height: 70rpx;
  height: 50rpx;
  padding-bottom: 20rpx;
  color: #333;
  margin-left: 50rpx;
  position: relative;
  border-bottom: 1px solid #eee;
}
.dotted{
  position: absolute;
  top: 30rpx;
  left: -30rpx;
  display: block;
  width: 10rpx;
  height: 10rpx;
  background-color: #ccc;
  border-radius: 50%;
}
.onclick{
  display: block;
  width: 100%;
  
}
/* 目录 */
/* 最新章节 */
.newcontent text{
  margin-right: 30rpx;
}
.main{
  font-size: 100rpx;
}
/* 最新章节 */