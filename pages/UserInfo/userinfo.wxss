.userinfo {
  background-color: #1f8ffe;
  width: 100%;
  height: 300rpx;
}

.top {
  height: 158rpx;
  display: flex;
  box-shadow: 0 0 0 0.5px rgba(173, 183, 185, 0.3);
}

.userinfo-avatar {
