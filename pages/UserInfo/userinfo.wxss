  margin-left: 20rpx;
  color: #fff;
}

.jieshao {
  font-size: 14px;
  color: #fff;
}

.bottom {
  display: flex;
  color: #fff;
  justify-content: space-between;
}

.bottom view {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.Indeximage {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}


/* -------------------动画-------------------- */
/* Animation Seven */
.animate text:nth-of-type(1) {
  animation-delay: 1.2s;
}
.animate text:nth-of-type(2) {
  animation-delay: 1.4s;
}

.animate text:nth-of-type(3) {
  animation-delay: 1.6s;
}

.animate text:nth-of-type(4) {
  animation-delay: 1.8s;
}

.animate text:nth-of-type(5) {
  animation-delay: 2s;
}

.animate text:nth-of-type(6) {
  animation-delay: 2.2s;
}
.animate text {
  display: inline-block;
  opacity: 0;
  transform: translate(0, 0) scale(.7);
  animation: leftRight 1.2s forwards;
  animation-iteration-count: infinite
}
@keyframes leftRight {
  40% {
    transform: translate(0, 0) scale(.7);
    opacity: 1;
  }
  60% {
     opacity: 1;
    color: #1f8ffe;
  }
  80% {
    transform: translate(0) scale(1.5);
    opacity: 0.2;
  }
  100% {
    transform: translate(0) scale(1);
    opacity: 1;
  }
}

.Indeximage text {
  color: #1f8ffe;   
}



